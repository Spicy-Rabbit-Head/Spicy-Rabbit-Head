{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "PocUI 配置模式",
  "description": "PocUI 组件库配置模式定义",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema 引用"
    },
    "aliases": {
      "type": "object",
      "description": "路径别名配置",
      "properties": {
        "components": {
          "type": "string",
          "description": "组件目录路径"
        },
        "ui": {
          "type": "string",
          "description": "UI 组件目录路径"
        }
      },
      "additionalProperties": false
    },
    "dependencies": {
      "type": "object",
      "description": "项目依赖",
      "additionalProperties": {
        "type": "string"
      }
    },
    "components": {
      "type": "array",
      "description": "已安装的组件列表",
      "items": {
        "type": "string",
        "description": "组件名称"
      }
    },
    "styles": {
      "type": "array",
      "description": "已安装的样式列表",
      "items": {
        "type": "string",
        "description": "样式名称"
      }
    },
    "renames": {
      "type": "object",
      "description": "组件重命名映射",
      "additionalProperties": {
        "type": "string"
      }
    }
  }
}
